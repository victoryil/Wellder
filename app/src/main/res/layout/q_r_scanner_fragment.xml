<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cesar.materialcomponents.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccc"
        android:visibility="gone"
        app:bannerBackgroundColor="@color/wellder_secondary"
        app:contentText="Your password was updated on another device. Please sign in again"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftButtonText="CANCEL"
        app:rightButtonText="ADD" />

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0"
        app:autoFocusButtonColor="@android:color/white"
        app:autoFocusButtonVisible="true"
        app:flashButtonColor="@android:color/white"
        app:flashButtonVisible="true"
        app:frameAspectRatioHeight="1"
        app:frameAspectRatioWidth="1"
        app:frameColor="@android:color/white"
        app:frameCornersRadius="@dimen/dimen_0"
        app:frameCornersSize="@dimen/dimen_50"
        app:frameSize="0.75"
        app:frameThickness="@dimen/dimen_2"
        app:layout_constraintTop_toBottomOf="@+id/banner"
        app:maskColor="#77000000" />
</androidx.constraintlayout.widget.ConstraintLayout>